<?xml version="1.0" encoding="utf-8"?><scraper framework="1.1" date="2014-01-30" name="jav" content="movies" language="en">
	<NfoUrl dest="3">
		<RegExp input="$$1" output="\1" dest="3">
			<expression />
		</RegExp>
	</NfoUrl>
	<CreateSearchUrl clearbuffers="no" dest="3">
		<RegExp input="$$1" output="&lt;url&gt;http://www.allcinema.net/prog/search_all.php?SearchTxt=\1&lt;/url&gt;" dest="3">
			<expression></expression>
		</RegExp>
		<!--RegExp input="$$1" output="&lt;url&gt;http://www.allcinema.net/prog/search_all.php?SearchTxt=\1&lt;/url&gt;" dest="2">
			<expression></expression>
		</RegExp-->
	</CreateSearchUrl>
	
        
    
    <GetSearchResults clearbuffers="no" dest="8">    
        <RegExp input="$$1" output="\1" dest="5">
            <expression trim="1" noclean="1">search-bar-kz\.gif(.*?)search-bar-bb\.gif</expression>
        </RegExp>
        
        <RegExp input="$$6" output="&lt;?xml version=&quot;1.0&quot; encoding=&quot;UTF-8&quot; standalone=&quot;yes&quot;?&gt;&lt;results&gt;\1&lt;/results&gt;" dest="8">
             <RegExp input="$$5" output="&lt;entity&gt;&lt;title&gt;\3 \2\4&lt;/title&gt;&lt;url&gt;http://www.allcinema.net/prog/show_c.php?num_c=\1&lt;/url&gt;&lt;/entity&gt;" dest="6+">
                
                <expression trim="1" repeat="yes">&lt;a href=&apos;show_c.php\?num_c=([0-9]+)&apos;&gt;(.*?)&lt;/a&gt;(.*?)(\([0-9]{4}\))</expression>
             </RegExp>   
            <expression noclean="1"></expression>
        </RegExp>
        
        
   </GetSearchResults>
        

        
	<GetDetails dest="4">
		<RegExp input="$$8" output="&lt;details&gt;\1&lt;/details&gt;" dest="4">
			<RegExp input="$$1" output="&lt;title&gt;\1&lt;/title&gt;" dest="8">
				<expression>&lt;title lang=&quot;ja&quot;&gt;.*?\s(.*?)\s-\sallcinema&lt;/title&gt;</expression>
			</RegExp>
            
            <RegExp input="$$1" output="&lt;year&gt;\1&lt;/year&gt;" dest="8+">
                <expression>&lt;a href=&apos;theater.php\?sYear=([0-9]{4})</expression>
            </RegExp>
            
            <!-- <tr><td>監督：</td><td><a href="show_p.php?num_p=4971">ロバート・ゼメキス</a></td><td></td></tr> -->
            <RegExp input="$$1" output="&lt;director&gt;\1&lt;/director&gt;" dest="8+">
                <expression>&lt;td&gt;監督：&lt;.*?&gt;(.*?)&lt;/a&gt;</expression>
            </RegExp>
            
            <!-- <span class="catch_copy">彼は<br />英雄（ヒーロー）か<br />犯罪者か</span> -->
            <RegExp input="$$1" output="&lt;tagline&gt;\1&lt;/tagline&gt;" dest="8+">
                <expression>class=&quot;catch_copy&quot;&gt;(.*?)&lt;/span&gt;</expression>
            </RegExp>       
            
            <!-- <td class="fwb">上映時間</td><td>138分</td> -->
            <RegExp input="$$1" output="&lt;runtime&gt;\1&lt;/runtime&gt;" dest="8+">
                <expression>上映時間.*?([0-9]*)分&lt;</expression>
            </RegExp>           
            
            <!-- stealMain"><img src='http://ecx.images-amazon.com/images/I/51A6epIedZL._SL160_.jpg' border -->
            <!-- http://www.allcinema.net/prog/image_large.php?i=343694&t=0&im=29513&nm=%25A5%25D5%25A5%25E9%25A5%25A4%25A5%25C8 -->
            
			<RegExp input="$$1" output="&lt;thumb&gt;\1&lt;/thumb&gt;" dest="8+">
				<expression>stealMain&quot;&gt;&lt;img src=&apos;(.*?)&apos;</expression>
			</RegExp>
            
			<RegExp input="$$1" output="&lt;studio&gt;dummy&lt;/studio&gt;" dest="8+">
				<expression />
			</RegExp>
            
			<RegExp input="$$1" output="&lt;actor&gt;&lt;thumb spoof=&quot;http://www.1pondo.tv&quot;&gt;\1&lt;/thumb&gt;&lt;name&gt;\2&lt;/name&gt;&lt;/actor&gt;" dest="8+">
				<expression>(http://www.1pondo.tv/moviepages/[0-9]{6}_[0-9]{3}/images/thum_b.jpg).*?&lt;h2&gt;(.*?)&lt;/h2&gt;</expression>
			</RegExp>
            
            
            <!-- <div class="guidetext">　「トレーニング デイ」「デンジャラス・ラン」の名優デンゼル・ワシント動き出すが…。<br /><span style
            -->
            
			<RegExp input="$$1" output="&lt;plot&gt;\1&lt;/plot&gt;" dest="8+">
				<expression trim="1">&lt;div class=&quot;guidetext&quot;&gt;(.*?)&gt;span</expression>
			</RegExp>
			<expression noclean="1"/>
		</RegExp>
	</GetDetails>
</scraper>
